@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>
    Restaurants
</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" 
                   class="form-control"
                   asp-for="SearchTerm"/>
            <span class="input-group">
                <button class="btn btn-light">
                    <i ></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-group-lg"
               asp-page="./Detail" 
               asp-route-restaurantId="@restaurant.Id">
                <i class="active">Info</i>
            </a>
        </td>
    </tr>
    }
</table>
<div>
    <p>Restaurants data is provided from a sample data for now</p>
<div>
    @Model.Message
</div>
